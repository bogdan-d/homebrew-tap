{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  // "extends": ["local>ublue-os/renovate-config"],
  "homebrew": {
    "ignorePaths": ["Formula/asusctl.rb"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["Formula/asusctl.rb"],
      "matchStrings": [
        "\\s\\surl\\s.+,\\stag:\\s\"(?<currentValue>.*)\",\\s.*"
      ],
      "depNameTemplate": "asus-linux/asusctl",
      "datasourceTemplate": "gitlab-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Casks/1password-gui-linux.rb"],
      "matchStrings": ["\\s\\sversion\\s\"(?<currentValue>.*)\""],
      "depNameTemplate": "1password",
      "datasourceTemplate": "custom.1password"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Casks/*-wallpapers*.rb"],
      "matchStrings": ["\\s\\sversion\\s\"(?<currentValue>.*)\""],
      "depNameTemplate": "projectbluefin/artwork",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Casks/framework-tool.rb"],
      "matchStrings": ["\\s\\sversion\\s\"(?<currentValue>.*)\""],
      "depNameTemplate": "FrameworkComputer/framework-system",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Casks/jetbrains-toolbox-linux.rb"],
      "matchStrings": ["\\s\\sversion\\s\"(?<currentValue>.*)\""],
      "depNameTemplate": "jetbrains",
      "datasourceTemplate": "custom.jetbrains"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Casks/lm-studio-linux.rb"],
      "matchStrings": ["\\s\\sversion\\s\"(?<currentValue>.*)\""],
      "depNameTemplate": "lm-studio",
      "datasourceTemplate": "custom.lm-studio",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Casks/visual-studio-code-linux.rb"],
      "matchStrings": ["\\s\\sversion\\s\"(?<currentValue>.*)\""],
      "depNameTemplate": "vscode",
      "datasourceTemplate": "custom.vscode",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Casks/vscodium-linux.rb"],
      "matchStrings": ["\\s\\sversion\\s\"(?<currentValue>.*)\""],
      "depNameTemplate": "VSCodium/vscodium",
      "datasourceTemplate": "github-releases"
    }
  ],
  "customDatasources": {
    "1password": {
      "defaultRegistryUrlTemplate": "https://releases.1password.com/linux/stable/index.xml",
      "format": "plain"
    },
    "jetbrains": {
      "defaultRegistryUrlTemplate": "https://data.services.jetbrains.com/products/releases?code=TBA&latest=true&type=release",
      "format": "json",
      "transformTemplates": ["{\"releases\": [ $.TBA[].{\"version\": build} ]}"]
    },
    "lm-studio": {
      "defaultRegistryUrlTemplate": "https://versions-prod.lmstudio.ai/update/linux/x86",
      "format": "json",
      "transformTemplates": ["{\"releases\": [ $.{\"version\": version} ]}"]
    },
    "vscode": {
      "defaultRegistryUrlTemplate": "https://update.code.visualstudio.com/api/update/linux-x64/stable/latest",
      "format": "json",
      "transformTemplates": [
        "{\"releases\": [ $.{\"version\": productVersion} ]}"
      ]
    }
  },
  "packageRules": [
    {
      "matchDatasources": ["custom.1password"],
      "extractVersion": "<title>1Password for Linux (?<version>.+)</title>"
    },
    {
      "matchDatasources": ["custom.jetbrains"],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)$"
    }
  ]
}
