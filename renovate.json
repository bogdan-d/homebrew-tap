{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  // "extends": ["local>ublue-os/renovate-config"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["Casks/1password-gui-linux.rb"],
      "matchStrings": ["\\s\\sversion\\s\"(?<currentValue>.*)\""],
      "depNameTemplate": "1password",
      "datasourceTemplate": "custom.1password"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["Casks/*-wallpapers*.rb"],
      "matchStrings": ["\\s\\sversion\\s\"(?<currentValue>.*)\""],
      "depNameTemplate": "wallpapers",
      "datasourceTemplate": "custom.wallpapers"
    }
  ],
  "customDatasources": {
    "1password": {
      "defaultRegistryUrlTemplate": "https://releases.1password.com/linux/stable/index.xml",
      "format": "plain"
    },
    "wallpapers": {
      "defaultRegistryUrlTemplate": "https://api.github.com/repos/projectbluefin/artwork/releases",
      "format": "json",
      "transformTemplates": [
        "{\"releases\": [ $[].{\"version\": name, \"releaseTimestamp\": created_at} ]}"
      ]
    }
  },
  "packageRules": [
    {
      "matchDatasources": ["custom.1password"],
      "extractVersion": "<title>1Password for Linux (?<version>.+)</title>"
    }
  ]
}
